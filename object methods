const jonas = {
    firstName: 'Jonas',
    lastName: 'Shmetman',
    birthYear: 1991,
    job: 'teacher',
    friends: ['Michael', 'Peter', 'Steven'],
    hasdDriversLicense: true,
    
    calcAge:function(){
        this.age = 2037 - this.birthYear;
        return this.age;
    },

    getSummary: function(){
        return `${this.firstName} is a ${this.calcAge()} old ${this.job}, and has a ${this.hasDriversLicense ? 'a' : 'no'} driver's license`;
    }

};

console.log(jonas.calcAge());

console.log(jonas.age);
console.log(jonas.age);
console.log(jonas.age);

console.log(jonas.getSummary());
